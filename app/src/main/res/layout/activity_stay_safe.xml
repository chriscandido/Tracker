<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StaySafeActivity">
    <!--Main Content-->
    <!-- Title -->
    <TextView
        android:id="@+id/instrtuctions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Stay Safe"
        android:textColor="@color/colorSecondary"
        android:background="@android:color/transparent"
        android:paddingTop="35dp"
        android:paddingBottom="15dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal" />

    <!-- Body -->
    <ScrollView
        android:id="@+id/instrtuctions_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/instrtuctions_title"
        android:layout_above="@+id/instructions_buttons"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="45dp"
            android:layout_marginBottom="45dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/instructions_virus"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/viruses"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/text_paragraph01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat"
                android:gravity="fill_horizontal"
                android:textColor="@color/colorPrimaryDarker"
                android:text="\t\tRight now, we are experiencing a pandemic. The Sars-CoV-2 virus that cause the new corona virus disease - 2019 or covid-19 is spreading rapidly.To keep you and your family safe, please observe the following.\n" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPrimaryDarker"
                android:text="Your hands touch many surfaces throughout the day and this makes your hands a likely place for the virus.To decrease the chances of spread of the virus and catching it yourself, practice washing your hands often.\n"
                android:layout_marginBottom="25dp" />

            <ImageView
                android:id="@+id/instructions_sink"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/sink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPrimaryDarker"
                android:text="Use soap as it is very effective at killing all types of bacteria and viruses.Lather generoysly with soap and rub all parts of your hands: fingers, palm, back of the hand, fingernails, and more.\n" />

            <ImageView
                android:id="@+id/instructions_soap"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/soap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPrimaryDarker"
                android:text="Keep yourself and your family safe by staying inside your house unless needing to go out for necessities such as food.Wear protective clothing if you can, like masks. Be quick outside and try to do your outside business when there are less people outside.\n"
                android:layout_marginBottom="25dp"
                android:gravity="start" />

            <ImageView
                android:id="@+id/instructions_house"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/house"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPrimaryDarker"
                android:text="Get the number of your local government unit and barangay. Coordinate with them for matters relating to the distribution of relief.This text is not final.\n"
                android:layout_marginBottom="25dp" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/instructions_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/instructions_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:text="Back"
            android:textColor="#00838f"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            app:strokeColor="#00838f"
            app:strokeWidth="1dp"
            app:cornerRadius="5dp"
            android:onClick="cancelActivity"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </RelativeLayout>
</RelativeLayout>